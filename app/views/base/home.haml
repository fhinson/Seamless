.container
  %h1.logo
    seam
    %span.less less

  -# User Input
  .container
    = form_for @user do |f|
      -# first page
      %h3.text-center
        Hello, I am seamless.

      -# second page
      %h3.text-center
        Welcome,
        = f.text_field :name

      -# third page
      %p.text-center
        Please tell me about yourself, ((name))

      %p.text-center
        = f.label :age, "I am "
        = f.number_field :age

      = f.submit




  -# Shoe
  .recommendation-section
    .row
      .col-xs-2
        .tag-section.product
          .label.label-seamless
            Etsy
          .label.label-seamless
            Basketball
          .label.label-seamless
            Rap
      .col-xs-7
        .product
          %h3.shoe-title
            = link_to "Nike Air Yeezy II Black Solar Red", "/"
          .jumbotron
            = image_tag "example.jpg", :class => "shoe-image"
      .col-xs-2
        .vote-section
          .jumbotron.null-padder.vote{:onclick => "fadeOutImage('fadeOutUp')"}
            .padder
              = image_tag "up.png", :class => "vote-button"
          .jumbotron.null-padder.vote{:onclick => "fadeOutImage('fadeOutDown')"}
            .padder
              = image_tag "down.png", :class => "vote-button"
