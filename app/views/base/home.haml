.container
  %h1.logo
    seam
    %span.less less

  -# Shoe
  .recommendation-section
    .row
      .col-xs-2
        .tag-section.product
          .label.label-seamless
            Etsy
          .label.label-seamless
            Basketball
          .label.label-seamless
            Rap
      .col-xs-7
        .product
          %h3.shoe-title
            = link_to @shoe.name, @shoe.seller
          .jumbotron
            = image_tag @shoe.url, :class => "shoe-image"
      .col-xs-2
        .vote-section
          .jumbotron.null-padder.vote{:onclick => "fadeOutImage('fadeOutUp')"}
            .padder
              = image_tag "up.png", :class => "vote-button"
          .jumbotron.null-padder.vote{:onclick => "fadeOutImage('fadeOutDown')"}
            .padder
              = image_tag "down.png", :class => "vote-button"
